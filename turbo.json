{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "clean": {
            "cache": false
        },
        "lint": {
            "dependsOn": ["build"]
        },
        "lint:fix": {
            "dependsOn": ["build"]
        },
        "format": {},
        "format:fix": {},
        "check-types": {},
        "test": {
            "dependsOn": ["build"]
        },
        "test:cov": {
            "dependsOn": ["build"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "out/**"],
            "inputs": ["$TURBO_DEFAULT$", "src/**/*.ts", "src/**/*.json"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    },
    "globalDependencies": [".eslintrc.cjs", ".prettierrc", "**/.env", "tsconfig.json"]
}
