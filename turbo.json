{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "inputs": ["src/**/*.ts", "src/**/*.json", "tsconfig.json", "tsconfig.build.json"]
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "format": {
            "outputs": []
        },
        "format:fix": {
            "outputs": []
        },
        "check-types": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "test:cov": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "test:integration": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        }
    }
}
