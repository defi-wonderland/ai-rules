/* Based on total-typescript no-dom library config */
/* https://github.com/total-typescript/tsconfig */
{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "incremental": true,
        "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test", "**/*.spec.ts", "**/*.test.ts"]
}
