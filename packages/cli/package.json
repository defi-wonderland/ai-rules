{
    "name": "@ai-rules/cli",
    "version": "0.0.1",
    "private": true,
    "description": "CLI tool for standardizing AI configuration across teams",
    "license": "MIT",
    "author": "Wonderland",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "ai-rules": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "check-types": "tsc --noEmit",
        "clean": "rimraf dist",
        "dev": "tsc -p tsconfig.build.json --watch",
        "format": "prettier --check \"{src,test}/**/*.ts\"",
        "format:fix": "prettier --write \"{src,test}/**/*.ts\"",
        "lint": "eslint \"{src,test}/**/*.ts\"",
        "lint:fix": "eslint --fix \"{src,test}/**/*.ts\"",
        "test": "vitest run",
        "test:cov": "vitest run --coverage",
        "test:integration": "vitest run --config vitest.config.integration.ts",
        "test:watch": "vitest watch"
    },
    "oclif": {
        "bin": "ai-rules",
        "commands": "./dist/commands",
        "dirname": "ai-rules",
        "plugins": [],
        "topicSeparator": " ",
        "topics": {
            "config": {
                "description": "Manage AI configuration"
            }
        }
    },
    "dependencies": {
        "@ai-rules/config": "workspace:*",
        "@ai-rules/generators": "workspace:*",
        "@ai-rules/prompts": "workspace:*",
        "@ai-rules/types": "workspace:*",
        "@oclif/core": "4.2.6"
    },
    "devDependencies": {
        "@oclif/test": "4.1.9"
    }
}
