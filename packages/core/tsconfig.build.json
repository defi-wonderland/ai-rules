/* Based on total-typescript no-dom library config */
/* https://github.com/total-typescript/tsconfig */
{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "rootDir": "./src",
        "composite": true,
        "declarationMap": true,
        "declaration": true,
        "outDir": "dist",
        "moduleResolution": "NodeNext"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "test", "dist", "**/*.test.ts"]
}
